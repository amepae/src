local a,b,c,d=game:GetService'Players',game:GetService'RunService',game:GetService'UserInputService',game:GetService'Workspace'local e=a.LocalPlayer local f,g,h=e:GetMouse(),d.CurrentCamera,Instance.new'Tool'h.Name='NovaTelekinesis'h.RequiresHandle=false h.Parent=e.Backpack local i,j,k,l,m=1000,20 local function release()if k then if l then l:Destroy()end if m then m:Destroy()end k=nil end end local function grab()local n=f.Target if n and not n.Anchored and(e.Character and not n:IsDescendantOf(e.Character))then local o=(n.Position-g.CFrame.Position).Magnitude if o<=i then k=n l=Instance.new'BodyPosition'l.MaxForce=Vector3.new(math.huge,math.huge,math.huge)l.D=1250 l.P=15000 l.Position=n.Position l.Parent=k m=Instance.new'BodyGyro'm.MaxTorque=Vector3.new(math.huge,math.huge,math.huge)m.CFrame=k.CFrame m.D=500 m.Parent=k end end end b.RenderStepped:Connect(function()if k and l and m then local n=g:ScreenPointToRay(f.X,f.Y)local o=n.Origin+(n.Direction*j)l.Position=o m.CFrame=g.CFrame end end)h.Activated:Connect(function()if not k then grab()else release()end end)h.Unequipped:Connect(function()release()end)c.InputBegan:Connect(function(n,o)if o then return end if n.KeyCode==Enum.KeyCode.F and k then local p=k release()if p then p.Velocity=g.CFrame.LookVector*250 p.RotVelocity=Vector3.new(math.random(-20,20),math.random(-20,20),math.random(-20,20))end end end)
